package reversiassignment;

import java.util.LinkedList;
import java.util.List;

public class GameState {
	Board board;
	int score;
	List<GameState> children;
	boolean isGameOver;
	Position move;
	int depth;
	
	public GameState(Board b, int s, Position p, int d) {
		board = b;
		score = s;
		move = p;
		depth = d;
		children = new LinkedList<GameState>();
		isGameOver = board.gameOver();
	}
	
	public void addChild(GameState child) {
		children.add(child);
	}
}
