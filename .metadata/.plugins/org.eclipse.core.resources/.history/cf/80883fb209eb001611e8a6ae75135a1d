package reversiassignment;

import java.util.HashSet;
import java.util.LinkedList;
import java.util.List;
import java.util.Set;

public class MiniMax {
	private Board board;
	private int score;
	
	public MiniMax(Board b, int s) {
		board = b;
		score = s;
	}
	
	private List<GameState> getChildren() {
		List<GameState> children = new LinkedList<GameState>();
		Set<Position> adjs = board.getAdjs();
		Board b;
		for (Position p : adjs) {
			b = new Board();
		}
		return children;
	}
	
	public Set<Position> minDecision() {
		Iterator<Position> itr1 = board.getAdjs().iterator();
		Set<Position> flips;
		Position p;
		do {
			p = itr1.next();
			flips = helper.evaluateMove(p, color, board);
		} while (flips.isEmpty() && itr1.hasNext());
		return new HashSet<Position>();
	}
	
}
