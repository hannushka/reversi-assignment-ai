		Position bestPosition;
		int bestScore = Integer.MIN_VALUE;
		int tmp;
		for (Position p : pos) {
			Board newBoard = new Board(board.getBoard(), board.getAdjs());
			newBoard.placeMarker(p, );
				
		}
		return null;
	}
	
