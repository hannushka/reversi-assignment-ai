package reversiassignment;

import java.util.Scanner;

import reversiassignment.Board.Cellstate;

public class Game {
	private Board board;
	private Scanner sc;
	private Player player1, player2;

	public Game() {
		board = new Board();
		sc = new Scanner(System.in);
	}
	
